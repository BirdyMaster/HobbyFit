// toggle btn_more
const btn_more = document.querySelector('.navLink.btn_more')
const dropdown_more = document.querySelector('.wrap_dropdown_more')

btn_more.addEventListener('mouseover', () => {
    dropdown_more.style.display = 'block'
    setTimeout(() => {dropdown_more.style.opacity = "100%"}, 10);
})
btn_more.addEventListener('mouseleave', () => {
    dropdown_more.style.opacity = "0%"
    setTimeout(() => {dropdown_more.style.display = 'none'}, 150);
})

