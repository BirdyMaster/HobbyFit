  margin-top: 3px;
}
.p_stockLeft.red {
  color: var(--color_red);
}
.p_stockLeft.red > span {
  color: var(--color_red);
}

.form_productPage {
  margin-bottom: 0;
}
.form_mainDesc {
  width: 100%;
}
.input_box {
  width: 100%;
  height: 54px;
  display: flex;

  border: 1px solid rgba(0, 0, 0, 0.06);
  border-radius: 8px;
  margin: 8px 0 24px;
  overflow: hidden;
  position: relative;
}
.parent_optionRadio {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: relative;
}
.parent_optionRadio:hover {
  background-color: var(--color_hover);
}

.optionRadio {
  width: 100%;
  height: 100%;
  cursor: pointer;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
input[name="Color"] + label {
  display: none;
}
.circle_option {
  border-radius: 100px;
  width: 16px;
  height: 16px;
  position: absolute;
  background-color: grey;
}

.input_box.qnt {
  margin-bottom: 42px;
}

.quantity_front,
.quantity_back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  opacity: 100%;
  align-items: center;
}
.quantity_front.hide,
.quantity_back.hide {
  opacity: 0;
}

.quantity_front {
  display: flex;
  opacity: 100%;
}
.quantity_back {
  display: none;
  opacity: 0;
}

.wrap_qntOptions {
  display: flex;
  flex: 1;
  height: 100%;
}
.wrap_qntOptions.mobile {
  display: none;
}
.qnt_option {
  flex: 1;
  height: 100%;

  display: flex;
  align-items: center;
  justify-content: center;

  cursor: pointer;
}
.qnt_option:hover {
  background-color: var(--color_hover);
}
.btn_giveQuantity {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 18px;
  border-left: var(--border_bottom);
  cursor: pointer;
  font
}
.btn_giveQuantity:hover {
  background-color: var(--color_hover);
}



.qntInput {
  height: 100%;
  width: 100%;
  flex: 1;
  padding-left: 16px;
  font-size: 17px;
}
.qntInput:hover {
  background-color: var(--color_bg);
}
.btn_nearQtn {
  height: 80%;
  padding: 0 16px;
  border-radius: 8px;

  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.btn_nearQtn.submit {
  color: white;
  font-weight: 600;
  margin: 0 5px;
}


.btnWrap_mainDesc {
  display: grid;
  grid-template-columns: 0.6fr 1fr;
  column-gap: 8px;
  row-gap: 8px;
}
.btn_mainDesc {
  height: 54px;
  width: 100%;
  border-radius: 8px;
  display: flex;
  align-items: center;
  padding: 20px;
  font-weight: 600;
  cursor: pointer;

}
.btn_mainDesc.bag {
  justify-content: center;
}


.theSVG {
  width: 17px;
  margin: 0 0 2px auto;
  display: none
}
.bagIcon_btnCart {
  width: 24px;
  object-fit: contain;
  margin-left: auto;
  display: none;
}


.price_insideBtn {
  margin-left: auto;
  color: white;
}

.sign_outOfstock {
  background-color: var(--color_hover);
  border-radius: 8px;
  grid-column-start: 1;
  grid-column-end: 3;
  height: 54px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.separator {
  width: 100%;
  height: 1px;
  padding: 0;
  margin: 24px 0;
  border-radius: 100px;
  background-color: rgba(0, 0, 0, 0.08);
  box-shadow: none;
}

.productDescription {
  margin-top: 20px;
}

.wrap_otherInfo {
  padding: 4px 16px;
}
.otherInfo {
  padding: 12px 0;
  width: 100%;
  display: flex;
  align-items: center;
}
.icon_otherInfo {
  margin-right: 14px;
  height: 24px;
  min-height: 24px;
  object-fit: contain;
}

.wrap_payments {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: 1fr 1fr;
  height: fit-content;
  margin-top: 16px;
}
.icon_payment {
  width: 95%;
  height: auto;
}



@media only screen and (min-width: 1440px) {}
@media only screen and (min-width: 1921px) {
  .container_productPage {
    max-width: 1300px;
  }
}
/* Default == 991 to 1440 */
@media only screen and (max-width: 990px) {
  .section_productPage {
    padding: 60px 0 0;
  }
  .sticky_div {
    border-radius: 0;
  }
  .sticky_left {
    width: 100%;
  }
  .normal_right {
    width: 100%;
    padding: 4vw;
  }
  .section_TOP_productPage {
    height: 50vh;
    max-height: 640px;
    padding-left: 0;
    padding-right: 0;
  }
  .wrap_sliderTitle {
    padding: 14px 16px 0
  }
  .sliderControls {
    padding-left: 16px;
    padding-right: 16px;
  }
  .container_productPage {
    flex-direction: column;
  }
  .container_productPage.mini {
    flex-direction: row;
  }
  .btnWrap_mainDesc {
    grid-template-columns: 1fr 1fr;
  }
  .theSVG {
    display: block
  }
  .swiperBtn:hover {
    background-color: #fff;
  }


}
@media only screen and (max-width: 770px) {
  .section_TOP_productPage {
    height: 88vh;
    min-height: 450px;
  }
  .swiper-slide {
    padding-bottom: 90px;
  }

  .swiper-pagination {
    max-width: 200px;
  }
  .swiper-pagination-bullet {
    margin-right: 6px;
  }
  .container_productPage.desc {
    grid-template-columns: 1fr;
  }
  .btn_mainDesc.bag {
    justify-content: flex-start;
  }
  .sticky_div {
    height: 500px;
  }

}
@media only screen and (max-width: 500px) {
  .swiper-pagination {
    max-width: 40vw;
  }
  .bagIcon_btnCart {
    display: block;
  }
  .wrap_mainDesc {
    height: 80vh;
  }
  .wrap_qntOptions {
    display: none;
  }
  .wrap_qntOptions.mobile {
    display: flex;
  }
  .btnWrap_mainDesc {
    grid-template-columns: 1fr;
  }
  .btn_mainDesc.bag {
    order: 2
  }
}