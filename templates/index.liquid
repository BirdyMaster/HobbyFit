<script>
  const nav = document.querySelector('nav')
  window.addEventListener('DOMContentLoaded', () => {
    nav.classList.add('no_shadow')
  })
  window.addEventListener('scroll', () => {
    window.scrollY > 60
      ? nav.classList.remove('no_shadow')
      : nav.classList.add('no_shadow')
  })
</script>